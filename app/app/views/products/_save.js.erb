$("ul.errors").html("");
<% if @product.erros.any? %>
  <% @product.erros.full_messages.each do |message| %>
    $("ul.erros").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".product-index").html("<%= escape_javascript(render 'index') %>")
  $("#product-modal").modal("hide");
<% end %>