<div class="modal-header">
  <h3>Delete Product</h3>
</div>
<div class="modal-body">
  <ul class="errors"></ul>
  Are u sure u wish to delete <strong><%= @product.name %></strong>?
</div>
<div class="modal-footer">
  <%= link_to "Yes, Delete this product please.", product_path(@product), method: :delete, remote: true, class: "btn btn-danger" %>
  <%= link_to "No, Please Don't!", "#", class: "btn", data: {dismiss: "modal"} %>
</div>
